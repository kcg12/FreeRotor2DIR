function [v1, v2] = getVibrationalStateMatrices(maxVibLvl, maxRotLvl)

totRoLvls = (maxRotLvl+1)^2;

v1 = cat(1, ones(totRoLvls, (maxVibLvl+1)*totRoLvls),...
    2*ones(totRoLvls, (maxVibLvl+1)*totRoLvls),...
    3*ones(totRoLvls, (maxVibLvl+1)*totRoLvls));

v2 = cat(2, ones((maxVibLvl+1)*totRoLvls, totRoLvls),...
    2.*ones((maxVibLvl+1)*totRoLvls, totRoLvls),...
    3.*ones((maxVibLvl+1)*totRoLvls, totRoLvls));